rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getRoleForTarget(userId) {
      return get(/databases/$(database)/documents/users/$(userId)/sharedWith/$(request.auth.uid)).data.role;
    }

    function isTrainerFor(userId) {
      return isSignedIn()
        && exists(/databases/$(database)/documents/users/$(userId)/sharedWith/$(request.auth.uid))
        && getRoleForTarget(userId) == "trainer";
    }

    function isViewerFor(userId) {
      return isSignedIn()
        && exists(/databases/$(database)/documents/users/$(userId)/sharedWith/$(request.auth.uid))
        && getRoleForTarget(userId) == "viewer";
    }

    function canReadUserData(userId) {
      return isOwner(userId)
        || isTrainerFor(userId)
        || isViewerFor(userId);
    }

    function canWriteUserData(userId) {
      return isOwner(userId)
        || isTrainerFor(userId);
    }

    match /users/{userId} {
      match /profile {
        allow read: if canReadUserData(userId);
        allow write, update, delete: if isOwner(userId);
        allow create: if isOwner(userId);
      }

      match /workoutPlans/{planId} {
        allow read: if canReadUserData(userId);
        allow write, update, delete, create: if canWriteUserData(userId);
      }

      match /workoutSessions/{sessionId} {
        allow read: if canReadUserData(userId);
        allow write, update, delete, create: if canWriteUserData(userId);
      }

      match /bodyStats/{entryId} {
        allow read: if canReadUserData(userId);
        allow write, update, delete, create: if canWriteUserData(userId);
      }

      match /measurements/{entryId} {
        allow read: if canReadUserData(userId);
        allow write, update, delete, create: if canWriteUserData(userId);
      }

      match /sharedWith/{shareId} {
        allow read, write, update, delete, create: if isOwner(userId);
      }

      match /clients/{clientId} {
        allow read, write, update, delete, create: if isOwner(userId);
      }
    }

    function isAdminUid(uid) {
      return get(/databases/$(database)/documents/users/$(uid)/profile).data.isAdmin == true;
    }

    match /globalExercises/{exerciseId} {
      allow read: if request.auth != null;
      allow write, update, delete, create: if request.auth != null && isAdminUid(request.auth.uid);
    }
  }
}
